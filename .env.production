# ================================================
# PRODUCTION CONFIGURATION - Windows Server
# Domain: https://adas-api.aiotlab.edu.vn:52000
# ================================================

# ================================================
# API Configuration
# ================================================
API_BASE_URL=https://adas-api.aiotlab.edu.vn:52000
HOST=0.0.0.0
PORT=52000
ENVIRONMENT=production
DEBUG=False

# ================================================
# CORS - Production Domains
# ================================================
CORS_ORIGINS=https://adas-api.aiotlab.edu.vn,https://adas-api.aiotlab.edu.vn:52000

# ================================================
# Database - SQL Server (CHỈ CẦN SỬA PASSWORD)
# ================================================
DB_HOST=localhost
DB_PORT=1433
DB_NAME=adas_production
DB_USER=sa
DB_PASSWORD=THAY_PASSWORD_SQL_SERVER_O_DAY
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# ================================================
# Security & Authentication
# ================================================
SECRET_KEY=production-secret-key-min-32-characters-change-this-in-deployment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================================
# Storage Paths (Windows Server)
# ================================================
STORAGE_ROOT=C:/inetpub/wwwroot/adas-backend/backend/storage
RAW_VIDEO_DIR=C:/inetpub/wwwroot/adas-backend/backend/storage/raw
PROCESSED_VIDEO_DIR=C:/inetpub/wwwroot/adas-backend/backend/storage/result
SNAPSHOT_DIR=C:/inetpub/wwwroot/adas-backend/backend/storage/snapshots
AUDIO_CACHE_DIR=C:/inetpub/wwwroot/adas-backend/backend/storage/audio_cache
LOG_DIR=C:/inetpub/wwwroot/adas-backend/backend/logs

# ================================================
# AI Models (Windows Server)
# ================================================
YOLO_MODEL_PATH=C:/inetpub/wwwroot/adas-backend/backend/models/yolov11n.pt
MEDIAPIPE_MODEL_PATH=C:/inetpub/wwwroot/adas-backend/backend/models
DEFAULT_DEVICE=cuda  # Use 'cpu' if no GPU

# ================================================
# Processing Configuration
# ================================================
MAX_VIDEO_SIZE_MB=500
MAX_CONCURRENT_JOBS=4
VIDEO_CHUNK_SIZE_MB=10

# ================================================
# Logging
# ================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ================================================
# Optional: Redis Cache (if installed)
# ================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

