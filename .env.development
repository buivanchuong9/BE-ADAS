# ================================================
# DEVELOPMENT CONFIGURATION - Local Testing
# Dùng SQLite - KHÔNG CẦN SQL SERVER
# ================================================

# ================================================
# API Configuration
# ================================================
API_BASE_URL=http://localhost:8000
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=True

# ================================================
# CORS - Allow all for development
# ================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080,http://127.0.0.1:3000

# ================================================
# Database - SQLite (Tự động tạo, không cần config)
# ================================================
DATABASE_URL=sqlite+aiosqlite:///./backend/adas.db

# ================================================
# Security (Development - Weak keys OK)
# ================================================
SECRET_KEY=dev-secret-key-for-testing-only-change-in-production-abc123xyz
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================================
# Storage Paths (Relative paths)
# ================================================
STORAGE_ROOT=./backend/storage
RAW_VIDEO_DIR=./backend/storage/raw
PROCESSED_VIDEO_DIR=./backend/storage/result
SNAPSHOT_DIR=./backend/storage/snapshots
AUDIO_CACHE_DIR=./backend/storage/audio_cache
LOG_DIR=./backend/logs

# ================================================
# AI Models (Relative paths)
# ================================================
YOLO_MODEL_PATH=./backend/models/yolov11n.pt
MEDIAPIPE_MODEL_PATH=./backend/models
DEFAULT_DEVICE=cpu

# ================================================
# Processing Configuration
# ================================================
MAX_VIDEO_SIZE_MB=500
MAX_CONCURRENT_JOBS=2
VIDEO_CHUNK_SIZE_MB=10

# ================================================
# Logging
# ================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=colored
